{
	"label": "Line Sorter",
	"version": "0.0",
	"author": "zack",
	"icon": {
		"fontawesome": "ï€‚"
	},
	"category": "File Line Tools",
	"formSource": "line_sorter.json",
	"formCopy": {
	    "version": "0.0",
	    "components": [
		    {
		        "componentName": "filepicker",
		        "context": {
		            "label": "Input file",
		            "name": "inputFile",
		            "required": true
		        }
		    },
		    {
		        "componentName": "radio",
		        "context": {
		            "label": "Direction",
		            "name": "direction",
		            "options": [
		                "ascending",
		                "descending"
		            ],
		            "required": true
		        }
		    }
		]
	},
	"params": {
		"direction": "ascending"
	},
	"inputs": {
		"inputFile": {
			"id": "inputFile",
			"label": "Text file",
			"type": "file",
			"dataType": "text"
		}
	},
	"outputs": {
		"outputFile": {
			"id": "outputFile",
			"label": "Sorted file",
			"type": "file",
			"dataType": "text"
		}
	},
	"task": {
		"command": "[[\"$PARAM_direction\" -eq \"descending\"]] && ORDER=\"--reverse\" || ORDER=\"\"; sort $ORDER ./inputs/inputFile > ./outputs/outputFile",
		"container_image": "ubuntu:14.04",
		"requirements": {
			"cpus": 1,
			"mem": 512,
			"disk": 1024
		}
	}
}
